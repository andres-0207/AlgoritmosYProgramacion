	//Ing. en TI
	//Escribir un algoritmo que determine si un número es positivo o negativo.
	
	Definir num Como Entero;
	Imprimir "Introduzca un número: ";
	Leer num;
	Si num > 0 Entonces
		Imprimir "El número es positivo";
	Sino Si num = 0 Entonces
			Imprimir "El cero no tiene signo";
		Sino
			Escribir "El número es negativo";
			FinSi
	FinSi
	
FinAlgoritmo